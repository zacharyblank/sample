{
    "min_packer_version": "0.8.0",

    "variables": {
      "aws_access_key": null,
      "aws_secret_key": null,
      "aws_region": null,
      "aws_vpc_id": null,
      "aws_subnet_id": null,
      "slug_path": null
    },

    "provisioners": [
      
      {
        "type": "shell",
        "inline": ["mkdir -p /tmp/otto/foundation-1"]
      },
      {
        "type": "file",
        "source": "/Users/zachary.blank/Projects/php/.otto/compiled/app/foundation-consul/app-build/",
        "destination": "/tmp/otto/foundation-1"
      },
      {
        "type": "shell",
        "inline": ["cd /tmp/otto/foundation-1 && bash ./main.sh"]
      },
      
      {
        "type": "file",
        "source": "{{ user `slug_path` }}",
        "destination": "/tmp/otto-app.tgz"
      },
      {
        "type": "shell",
        "script": "build-php.sh"
      }
    ],

    "builders": [{
      "name": "otto",
      "type": "amazon-ebs",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "region": "{{ user `aws_region` }}",
      "vpc_id": "{{ user `aws_vpc_id` }}",
      "subnet_id": "{{ user `aws_subnet_id` }}",
      "source_ami": "ami-21630d44",
      "instance_type": "c3.large",
      "ssh_username": "ubuntu",
      "ami_name": "php {{timestamp}}"
    }]

}
